<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/init_content1" />

    <Button
        android:id="@+id/btnAsk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="@string/ask_obj1" />

    <Button
        android:id="@+id/btnAsk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask_obj2" />

    <RadioGroup
        android:id="@+id/rdgObjName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" > <!--水平排列-->

        <RadioButton
            android:id="@+id/rbtnObj1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ask_obj1" />

        <RadioButton
            android:id="@+id/rbtnObj2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ask_obj2" />
    </RadioGroup>

    <Button
        android:id="@+id/btnAsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />
        <!--android:background="@mipmap/ic_launcher" />    &lt;!&ndash;拉伸充满&ndash;&gt;-->



</LinearLayout>